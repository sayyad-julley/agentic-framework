apiVersion: kuma.io/v1alpha1
kind: MeshTimeout
metadata:
  name: platform-default-timeouts
  namespace: kuma-system
  labels:
    kuma.io/policy-role: system
    kuma.io/mesh: default
spec:
  targetRef:
    kind: Mesh
  to:
    - targetRef:
        kind: Mesh
      default:
        connectionTimeout: 5s
        idleTimeout: 30m
        http:
          requestTimeout: 15s
          streamIdleTimeout: 1h

