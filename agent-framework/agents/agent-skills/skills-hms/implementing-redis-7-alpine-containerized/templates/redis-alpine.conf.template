# Redis 7-Alpine Configuration Template
# Containerized deployment with security hardening and performance optimization

# Network
bind 0.0.0.0
protected-mode yes
port 6379

# Security
requirepass {SECURE_PASSWORD_HERE}
rename-command CONFIG ""
rename-command FLUSHDB ""
rename-command FLUSHALL ""

# Persistence - AOF for durability
appendonly yes
appendfsync everysec
no-appendfsync-on-rewrite yes
auto-aof-rewrite-percentage 100
auto-aof-rewrite-min-size 64mb

# Optional: Hybrid RDB + AOF
save 900 1
save 300 10
save 60 10000

# Memory Management
maxmemory 2gb
maxmemory-policy allkeys-lfu  # LFU for hot key protection
maxmemory-reserved 200mb      # 10% reservation for operational needs

# Performance
tcp-backlog 511
timeout 0
tcp-keepalive 300

# Logging
loglevel notice
logfile ""

# Slow Log
slowlog-log-slower-than 10000  # Log commands slower than 10ms
slowlog-max-len 128

# Client Output Buffer Limits
client-output-buffer-limit normal 0 0 0
client-output-buffer-limit replica 256mb 64mb 60
client-output-buffer-limit pubsub 32mb 8mb 60

# Lua Scripting
lua-time-limit 5000

# Latency Monitoring
latency-monitor-threshold 100  # Monitor commands slower than 100ms

